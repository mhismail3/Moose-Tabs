{
  "manifest_version": 3,
  "name": "Moose Tabs - Organize your tabs",
  "version": "1.0.0",
  "description": "Visualize tab hierarchy in a tree view sidebar. Organize tabs by opener relationships with drag-and-drop, search, and grouping.",
  "default_locale": "en",
  "background": {
    "service_worker": "background.js"
  },
  "permissions": [
    "tabs",
    "sidePanel",
    "storage",
    "contextMenus"
  ],
  "side_panel": {
    "default_path": "index.html"
  },
  "action": {
    "default_title": "Open Tab Tree - View tabs in hierarchical sidebar"
  },
  "web_accessible_resources": [
    {
      "resources": ["settings.html", "settings-bundle.js", "settings-loading.css", "settings-init.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}